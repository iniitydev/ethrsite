# EthrSITE Environment Configuration
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# PayloadCMS Configuration
PAYLOAD_SECRET=your-payload-secret-key-here
PAYLOAD_CONFIG_PATH=./src/payload.config.ts
DATABASE_URL=postgresql://username:password@localhost:5432/ethrsite

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Authentication (EthrAUTH)
KEYCLOAK_URL=https://auth.ethrsite.com
KEYCLOAK_REALM=ethrsite
KEYCLOAK_CLIENT_ID=ethrsite-frontend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Marketing Tools Integration
TRACARDI_URL=https://tracardi.ethrsite.com
TRACARDI_API_KEY=your-tracardi-api-key
UNOMI_URL=https://unomi.ethrsite.com
UNOMI_API_KEY=your-unomi-api-key
DITTOFEED_API_KEY=your-dittofeed-api-key
POSTIZ_API_KEY=your-postiz-api-key

# Natural Language Communication
OPENAI_API_KEY=your-openai-api-key

# External Services (Future Integration)
STRIPE_SECRET_KEY=your-stripe-secret-key
PAYMENTER_URL=https://paymenter.ethrsite.com
LAGO_URL=https://lago.ethrsite.com

# Secrets Management (EthrSECRETS)
INFISICAL_URL=https://secrets.ethrsite.com
INFISICAL_TOKEN=your-infisical-token
VAULTWARDEN_URL=https://vault.ethrsite.com

# Deployment
DEPLOYMENT_TOKEN=your-deployment-token
WEBHOOK_SECRET=your-webhook-secret

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@ethrsite.com

# Storage
UPLOAD_MAX_SIZE=5000000